<h1>New department</h1>
<% form_for :department,:url => admin_departments_path do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :dept_name %><br />
    <%= f.text_field :dept_name %>
  </p>
  <p>
    <%= f.label :abbrevation %><br />
    <%= f.text_field :abbrevation %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :system_defined %><br />
    <%= f.text_field :system_defined %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', admin_departments_path %>
