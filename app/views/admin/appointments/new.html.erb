<h1>New appointment</h1>

<% form_for :appointment,:url=>admin_appointments_path do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :department_id %><br />
      <%= f.select :department_id,all_departments%>
  </p>
  <p>
    <%= f.label :doctor_id %><br />
    <%= f.select :doctor_id,all_doctors %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :appointment_date %><br />
    <%= f.date_select :appointment_date %>
  </p>
  <p>
    <%= f.label :appointment_time %><br />
    <%= f.datetime_select :appointment_time %>
  </p>
  <p>
    <%= f.label :reg_no %><br />
    <%= f.text_field :reg_no %>
  </p>
  <p>
    <%= f.label :age %><br />
    <%= f.text_field :age %>
  </p>
  <p>
    <%= f.label :gender %><br />
    <%= f.text_field :gender %>
  </p>
  <p>
    <%= f.label :contact_no %><br />
    <%= f.text_field :contact_no %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back',admin_appointments_path %>
